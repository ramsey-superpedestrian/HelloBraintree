						"query": "mutation ExampleVaultWithTypeFragment($input: VaultPaymentMethodInput!) {\n  vaultPaymentMethod(input: $input) {\n    paymentMethod {\n      id\n      usage\n      details {\n        __typename\n        ... on CreditCardDetails {\n          cardholderName\n        }\n        ... on PayPalAccountDetails {\n\t\t\t\t\temail\n        }\n        ... on VenmoAccountDetails {\n          username\n        }\n        ... on UsBankAccountDetails {\n          accountholderName\n        }\n      }\n    }\n    verification {\n      status\n    }\n  }\n}",
